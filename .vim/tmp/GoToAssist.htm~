    <title>GoToAssist</title>   
    <meta name="robots" content="noindex, nofollow" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" language="javascript">
        function setJS() {
            if (document.QuestionEntry.Email.value == '') {
                alert('Please enter your email address.');
                document.QuestionEntry.Email.focus();
                return false;
            }

            if (!checkEmail(document.QuestionEntry.Email.value)) {
                alert('Please enter a valid email address.');
                document.QuestionEntry.Email.value = '';
                document.QuestionEntry.Email.focus();
                return false;
            }

            if (document.QuestionEntry.Question.value == '') {
                alert('Please enter your code.');
                document.QuestionEntry.Question.focus();
                return false;
            }

            document.QuestionEntry.JavaScript.value = "true";
            document.QuestionEntry.submit();

        }

        function checkEmail(email) {
            var filter = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/;

            if (!filter.test(email)) {
                return false;
            }

            return true;
        }

        $(document).ready(function () {
            $("#Question").keyup(function (event) {
                if (event.keyCode == 13) {
                    $("#Start").click();
                }
            });
        });
                
    </script>
</head>
